---
import { Image } from 'astro:assets';

import Layout from '../layouts/AZ.astro';
import NavBar from '../components/Navbar.astro';
import TitleBar from '../components/TitleBar.astro'
import PersonnelCard from '../components/PersonnelCard.astro';

import harrelImg from '../assets/people/harrel.jpg';
import brewerImg from '../assets/people/brewer.jpg';
import vanoverImg from '../assets/people/vanover.jpg';

import conwayImg from '../assets/people/conway.jpg';
import egurollaImg from '../assets/people/egurolla.jpg';
import harrisonImg from '../assets/people/harrison.jpg';
import johnstonImg from '../assets/people/johnston.jpg';
import rinaImg from '../assets/people/rina.jpg';


const pageTitle = "Team"; 

---

<Layout title={pageTitle}>
<TitleBar/>
<div class="container">
    <NavBar/>
</div>

<div class="container">
    <h2>Personnel</h2>

    <p>The LTRR museum program includes staff and students that work with the collections and archives at LTRR as well as team members based within
        our partner institution the <a href="https://www.nps.gov/orgs/1260/">National Park Service Western Archeological and Conservation Center (WACC)</a>.
    </p>

    <div class="container text-center">
        <div class="row align-items-center">



        <PersonnelCard 
            fullname="Peter Brewer" 
            position="Curator" 
            linkHref="https://ltrr.arizona.edu/person/curator" 
            imgSrc={brewerImg}
            aboveFold={true}/>

        <PersonnelCard 
            fullname="Shannon Harrel" 
            position="Assistant Curator" 
            linkHref="https://ltrr.arizona.edu/person/shannon-harrel" 
            imgSrc={harrelImg}
            aboveFold={true}/>

        <PersonnelCard 
            fullname="Gabriella Vanover" 
            position="Research Technician" 
            linkHref="https://ltrr.arizona.edu/person/gabriella-vanover-0" 
            imgSrc={vanoverImg}/>

        <PersonnelCard 
            fullname="Alyssa Rina" 
            position="Conservator" 
            linkHref="https://ltrr.arizona.edu/person/alyssa-rina" 
            imgSrc={rinaImg}/>

        <PersonnelCard 
            fullname="Audrey Harrison" 
            position="Conservator" 
            linkHref="https://ltrr.arizona.edu/person/audrey-harrison" 
            imgSrc={harrisonImg}/>            

        <PersonnelCard 
            fullname="Lauren Conway" 
            position="Conservator" 
            linkHref="https://ltrr.arizona.edu/person/lauren-conway" 
            imgSrc={conwayImg}/>    

        <PersonnelCard 
            fullname="Jessica Johnston" 
            position="Archival Assistant" 
            linkHref="https://ltrr.arizona.edu/person/jessica-johnston" 
            imgSrc={johnstonImg}/>  

        <PersonnelCard 
            fullname="Stephanie Egurolla" 
            position="Curatorial Assistant" 
            linkHref="https://ltrr.arizona.edu/person/stephanie-egurrola" 
            imgSrc={egurollaImg}/>  


        </div>
    </div>


</div>

    


</div>
</Layout>
