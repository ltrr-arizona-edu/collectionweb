
---
const currentPath = Astro.url.pathname;
const navItems = [
  { name: "Home", href: "/" },
  { name: "Team members", href: "../team" },
  { name: "Loans", href: "../loans" },
  { name: "Archiving", href: "../archiving" },
  { name: "Projects", href: "../projects" },
  { name: "Photos", href: "../photos" },
  { name: "Donate", href: "../donate" }
];
---
<style>
    .nav-link{
       color : rgb(0, 28, 72);
    }
    
    .nav-link:hover {
        filter: brightness(0.7); /* Darken to 70% brightness (adjust value) */
    }
</style>


<div class="container">
    <nav class="navbar navbar-expand-lg border-bottom border-body">
    <div class="container-fluid">

        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="nav nav-pills">

                {navItems.map(item => (
                <li class="nav-item">
                    <a
                    href={item.href}
                    class={currentPath === item.href ? "nav-link active" : "nav-link"}
                    >
                    {item.name}
                    </a>
                </li>
                ))}
            </ul>
        </div>
    </div>
    </nav>
</div>